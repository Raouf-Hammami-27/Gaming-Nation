<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNet.Identity


<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="G-Nation Admin Panel" />
    <meta name="keywords" content="Admin, Dashboard, Bootstrap3, Sass, transform, CSS3, HTML5, Web design, UI Design, Responsive Dashboard, Responsive Admin, Admin Theme, Best Admin UI, Bootstrap Theme, Wrapbootstrap, Bootstrap" />
    <meta name="author" content="Bootstrap Gallery" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/img/favicon.ico")">
    <title>G-Nation Admin Panel</title>


    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/Content/AdminCss/bootstrap.css")" rel="stylesheet" media="screen">
    <!-- Animate CSS -->
    <link href="@Url.Content("~/Content/AdminCss/animate.css")" rel="stylesheet" media="screen">
    <!-- Alertify CSS -->
    <link href="@Url.Content("~/Content/AdminCss/alertify.core.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/AdminCss/alertify.default.css")"  rel="stylesheet">
    <!-- Main CSS -->
    <link href="@Url.Content("~/Content/AdminCss/main.css")" rel="stylesheet" media="screen">
    <!-- Datepicker CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/AdminCss/datepicker.css")">
    <!-- Font Awesome -->
    <link href="@Url.Content("~/Content/AdminCss/font/font-awesome.min.css")" rel="stylesheet">
    <!-- HTML5 shiv and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
             <!-- Scripts -->
    <!-- Dashboard Wrapper ends -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="@Url.Content("~/Content/AdminJs/jquery.js")"></script>
    <!-- jQuery UI JS -->
    <script src="@Url.Content("~/Content/AdminJs/jquery-ui-v1.10.3.js")"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="@Url.Content("~/Content/AdminJs/bootstrap.min.js")"></script>
    <!-- Sparkline graphs -->
    <script src="@Url.Content("~/Content/AdminJs/sparkline.js")"></script>
    <!-- jquery ScrollUp JS -->
    <script src="@Url.Content("~/Content/AdminJs/scrollup/jquery.scrollUp.js")"></script>
    <!-- Notifications JS -->
    <script src="@Url.Content("~/Content/AdminJs/alertify/alertify.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/alertify/alertify-custom.js")"></script>
    <!-- Flot Charts -->
    <script src="@Url.Content("~/Content/AdminJs/flot/jquery.flot.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/flot/jquery.flot.tooltip.min.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/flot/jquery.flot.resize.min.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/flot/jquery.flot.stack.min.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/flot/jquery.flot.orderBar.min.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/flot/jquery.flot.pie.min.js")"></script>
    <!-- JVector Map -->
    <script src="@Url.Content("~/Content/AdminJs/jvectormap/jquery-jvectormap-1.2.2.min.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/jvectormap/jquery-jvectormap-usa.js")"></script>
    <!-- Custom Index -->
    <script src="@Url.Content("~/Content/AdminJs/custom.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/custom-index.js")"></script>
    <!-- Sparkline graphs -->
    <!-- Data tables -->
    @RenderSection("Scripts", required: false)    
    @RenderSection("Styles", required: false)
    <script type="text/javascript">

// Google Internal Site Search script- By JavaScriptKit.com (http://www.javascriptkit.com)
// For this and over 400+ free scripts, visit JavaScript Kit- http://www.javascriptkit.com/
// This notice must stay intact for use

//Enter domain of site to search.

function Gsitesearch(curobj){
curobj.q.value=curobj.qfront.value
}

    </script>

</head>

<body>
    <!-- Header Start -->
    <header>
     

        <!-- Logo starts -->
        <div class="logo">
            <a href='@Url.Action("", "Admin/Index")' >

                <div class="user-avatar animated rubberBand">
                    <img src="@Url.Content("~/Content/img/logo.png")" alt="logo"></div>
                    <span class="menu-toggle hidden-xs">
                        <i class="fa fa-bars"></i>
                    </span>
</a>
        </div>
        <!-- Logo ends -->
        <!-- Custom Search Starts -->
        <form action="https://www.google.com/search" method="get" onSubmit="Gsitesearch(this)">


            <div class="custom-search pull-left hidden-xs hidden-sm">
                <input name="q" type="hidden" />
                <input name="qfront" class="search-query" placeholder="Google Search" type="text" style="width: 180px; color:black;" /> <i class="fa fa-search" type="submit" value="Search" /></i>

            </div>
            </form>
        <!-- Custom Search Ends -->
        
    </header>
    <!-- Header ends -->
    <!-- Left sidebar starts -->
    <aside id="sidebar">
        <!-- Current User Starts -->
        
        <div class="current-user">
            <div class="user-avatar animated rubberBand">
                <img src="~/Content/img/avatar.jpg" alt="Current User">
                <span class="busy"></span>
            </div>
            <div class="user-name"> @Html.Label("Welcome " + User.Identity.GetUserName())</div>
            <ul class="user-links">
                <li>
                    <a href="@Url.Action("", "Manage/Index")">
                        <i class="fa fa-user text-success"></i>
                    </a>
</li>
           
                <li>
@if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
        @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="fa fa-sign-out text-danger"></i>
                    </a>
    }
}
                </li>
  
            </ul>
        </div>
        <!-- Current User Ends -->
        <!-- Menu start -->
        <div id='menu'>
            <ul>
                <li>
                    <a href='@Url.Action("", "Admin/Index")'>
                        <i class="fa fa-desktop"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
@if (this.User.IsInRole("Event_Organizer"))
{
                <li class='has-sub'>
                    <a href=''>
                        <i class="fa fa-calendar"></i>
                        <span>Events Organisation</span>
                    </a>
                    <ul>
                        <li>
                            <a href='@Url.Action("", "Evenement/Index")'>
                                <span>Events</span>
                            </a>
                        </li>
                        <li>
                            <a href='@Url.Action("", "Tournament/Index")'>
                                <span>Tournaments</span>
                            </a>
                        </li>
                    </ul>
                </li>
}
@if (this.User.IsInRole("Administrator"))
{
                <li class='has-sub'>
                    <a href='#'>
                        <i class="fa fa-file-text"></i>
                        <span>Articles</span>
                    </a>
                    <ul>
                        <li>
                            <a href='@Url.Action("", "Game/Index")'>
                                <span>Games</span>
                            </a>
                        </li>
                        <li>
                            <a href='@Url.Action("", "News/Index")'>
                                <span>News</span>
                            </a>
                        </li>

                    </ul>
                </li>
}
                @if (this.User.IsInRole("Administrator"))
                {

                    <li class='has-sub'>
                        <a href='#'>
                            <i class="fa fa-users"></i>
                            <span>Users</span>
                        </a>
                        <ul>
                            <li>
                                <a href='@Url.Action("", "Admin/Index_Member")'>
                                    <span>Members</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("", "Admin/Index_Event_Organizer")'>
                                    <span>Event Organizers</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("", "Admin/Index_Vip")'>
                                    <span>Vip's</span>
                                </a>
                            </li>
                           
                        </ul>
                    </li>
                    <li class='has-sub'>
                        <a href='#'>
                            <i class="fa fa-wechat"></i>
                            <span>Forum</span>
                        </a>
                        <ul>
                            <li>
                                <a href='@Url.Action("", "ForumTh/Index")'>
                                    <span>Forum Threads</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("", "ForumTh/Piechart")'>
                                    <span>Forum stats</span>
                                </a>
                            </li>

                        </ul>
                    </li>
                    <li class='has-sub'>
                        <a href='#'>
                            <i class="fa fa-shopping-cart"></i>
                            <span>Shop</span>
                        </a>
                        <ul>
                            <li>
                                <a href='@Url.Action("", "Produit/Index")'>
                                    <span>Products</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("", "Produit/PieChartProduit")'>
                                    <span>Products stats</span>
                                </a>
                            </li>

                        </ul>
                    </li>
                    <li class='has-sub'>
                        <a href='#'>
                            <i class="fa fa-star"></i>
                            <span>VIP Articles</span>
                        </a>
                        <ul>
                            <li>
                                <a href='@Url.Action("", "VipArticle/Index")'>
                                    <span>Articles</span>
                                </a>
                            </li>
                            <li>
                                <a href='@Url.Action("", "VipArticle/WeatherJS")'>
                                    <span>Weather JS</span>
                                </a>
                            </li>

                        </ul>
                    </li>
                }
            </ul>
        </div>
        <!-- Menu End -->
        <!-- Freebies Starts -->
        <div class="freebies">

            <!-- Sidebar Extras -->
            
        </div>
        <!-- Freebies Starts -->
    </aside>
    <!-- Left sidebar ends -->
    <!-- Dashboard Wrapper starts -->

   <div class="dashboard-wrapper">
       
        <!-- Main Container starts -->
        <div class="main-container">

            <img src="~/Content/img/banner.jpg" height="200" width="1140" />

           
            <!-- Container fluid ends -->
            @RenderBody()


        </div>
        <!-- Main Container ends -->
        <!-- Footer starts -->
        <footer>
            Copyright G-Nation Admin Panel 2015.
        </footer>
        <!-- Footer ends -->
    </div>
</body>
    

</html>