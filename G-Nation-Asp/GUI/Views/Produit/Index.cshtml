@model IEnumerable<TAG_Domain.Entities.produit>


@{
    ViewBag.Title = "Index";
}

@section Scripts{
    <script src="@Url.Content("~/Content/AdminJs/jquery.js")"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="@Url.Content("~/Content/AdminJs/bootstrap.min.js")"></script>
    <!-- Sparkline graphs -->
    <script src="@Url.Content("~/Content/AdminJs/sparkline.js")"></script>
    <!-- Data tables -->
    <script src="@Url.Content("~/Content/AdminJs/jquery.datatables.js")"></script>
    <!-- jquery ScrollUp JS -->
    <script src="@Url.Content("~/Content/AdminJs/scrollup/jquery.scrollUp.js")"></script>
    <!-- Custom Index -->
    <script src="@Url.Content("~/Content/AdminJs/custom.js")"></script>
    <script src="@Url.Content("~/Content/AdminJs/custom-datatables.js")"></script>
}

<!-- Spacer starts -->
<div class="spacer">

    <!-- Row Starts -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="panel">
                <div class="panel-heading">
                    <h4 class="panel-title">Produits</h4>
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dt_example" class="table-responsive example_alt_pagination clearfix">
                            <div class="dataTables_filter" id="data-table_filter">
                                <button type="button" class="btn btn-info"><i class="fa fa-plus"></i> @Html.ActionLink("Create New", "Create")</button>
                                <button type="button" class="btn btn-info">
                          <i class="fa fa-plus"></i> @Html.ActionLink("List Pannier", "ListPannier")</button>
                                <button type="button" class="btn btn-info">
                                    <i class="fa fa-plus"></i> @Html.ActionLink("Pdf", "pdf")
                                </button>
                                    <table class="table no-margin table-condensed table-striped table-hover pull-left" id="data-table">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.image_link)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.idProduit)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.date)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.description)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.price)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.quantite)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.idUser)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <img src="~/Content/@item.image_link" height="100" width="100" />
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.idProduit)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.date)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.description)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.price)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.quantite)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.idUser)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.idProduit }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.idProduit }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.idProduit })



                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       