@model GUI.Models.gameViewModels

@{
    ViewBag.Title = "Details";
}
<script>
    function getDate() {
        var d = model.date;
        document.getElementById("demo").innerHTML = d.getDay();
    }
</script>



<div>
  
   
    <div class="blog">
   
        <div class="blog-header">
            <!-- Row starts -->
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-8 col-xs-9">
                    <h4 class="blog-title">
                        @Html.DisplayFor(model => model.name) </h4>

                    <hr />
                        <p class="date-time">
                            <span class="day">
                                <i class="fa fa-clock-o"> </i> 
                            </span>
                            <span class="day">
                                <i class="fa fa-calendar"></i> Modified : @Html.DisplayFor(model => model.date)
                            </span>

                            <span class="day hidden-xs">
                                <i class="fa fa-comments">   @Model.commentts.Count @Html.ActionLink("Comments", "getComment", new { id = Model.idArticle }) </i>

                            </span>
                            @*<div class="fa fa-trash-o">@Model.commentts.Count @Html.ActionLink("Delete", "Delete", new { id = Model.idArticle }) </div>*@
                            <span class="day hidden-xs">
                                <i class="fa fa-star"></i> @Html.DisplayFor(model => model.rating)
                            </span>
                            <span class="day hidden-xs">
                                
                             <i class="fa fa-file-pdf-o text-warning">@Html.ActionLink(" PDF", "printout", new { id = Model.idArticle })</i>
                                
                            </span>
                            </p>
</div>
                <div class="col-lg-3 col-md-3 col-sm-4 col-xs-3">
                    
                    <img src="~/Content/@Model.link_img" width="200" class="blog-gallery clearfix" />
                </div>
            </div>
            <!-- Row ends -->
        </div>
        <div class="blog-body">
            <div class="blog-img">
               
                <img src="~/Content/@Model.link_imgg" alt="Blog Image" height="400px" class="img-responsive"  />
            </div>
            <div class="blog-content">
                @Html.DisplayFor(model => model.description)
            </div>
        </div>
        <div class="blog-footer">
            <!-- Row starts -->
            <div class="row">
                <div >
                    <h5 class="blog-title">Game Category:  @Html.DisplayFor(model => model.category) </h5>
                     </div>
            <!-- Row ends -->
        </div>

   </div>

        

    </div>
<p>
    <div class="fa fa-pencil">
        @Html.ActionLink("Edit", "Edit", new { id = Model.idArticle }) </div> |
    <div class="fa fa-angle-double-left">   @Html.ActionLink("Back to List", "Index") </div>
</p>
