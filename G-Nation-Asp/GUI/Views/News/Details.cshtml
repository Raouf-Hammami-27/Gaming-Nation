@model GUI.Models.newsViewModels

@{
    ViewBag.Title = "Details";
   
}


<body>


    <div>


        <div class="blog">

            <div class="blog-header">
                <!-- Row starts -->
                <div class="row">
                    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-9">
                        <h4 class="blog-title">
                            @Html.DisplayFor(model => model.name)
                        </h4>

                        <hr />
                        <p class="date-time">
                            <span class="day">
                                <i class="fa fa-clock-o" onmouseover="getDate()" id="demo"> </i>
                            </span>
                            <span class="day">
                                <i class="fa fa-calendar"></i> Modified : @Html.DisplayFor(model => model.date)
                            </span>

                            <span class="day hidden-xs">
                                <i class="fa fa-comments"> @Model.commentts.Count  @Html.ActionLink("Comments", "getComment", new { id = Model.idArticle }) </i>
                            </span>
                            <span class="day hidden-xs">

                                <i class="fa fa-file-pdf-o text-warning">@Html.ActionLink(" PDF", "printout", new { id = Model.idArticle })</i>

                            </span>

                        </p>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-3">

                        <img src="~/Content/@Model.link_img" width="200" class="blog-gallery clearfix" />
                    </div>
                </div>
                <!-- Row ends -->
            </div>
            <div class="blog-body">
                <div class="blog-img">

                    <img src="~/Content/@Model.link_imgg" alt="Blog Image" class="img-responsive" height="511" width="686" />
                </div>
                <div class="blog-content">
                    @Html.DisplayFor(model => model.description)
                </div>
            </div>
            <div class="blog-footer">
                <!-- Row starts -->
                <div class="row">

                    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
                        <ul class="social-icons">
                            <li>
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Twitter">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Facebook">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Linkedin">
                                    <i class="fa fa-linkedin"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Pinterest">
                                    <i class="fa fa-pinterest"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Github">
                                    <i class="fa fa-github-alt"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Foursquare">
                                    <i class="fa fa-foursquare"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Tumblr">
                                    <i class="fa fa-tumblr"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" data-toggle="tooltip" data-placement="top" title="Weibo">
                                    <i class="fa fa-weibo"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Row ends -->
            </div>

        </div>



    </div>
    <p>
        <div class="fa fa-pencil">
            @Html.ActionLink("Edit", "Edit", new { id = Model.idArticle })
        </div> |
        <div class="fa fa-angle-double-left">   @Html.ActionLink("Back to List", "Index") </div>
    </p>

</body>




